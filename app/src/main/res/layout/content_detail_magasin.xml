<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_detail_magasin"
        tools:context="fr.unice.polytech.si3.ihm.cpsophia.activities.DetailMagasinActivity"
        android:orientation="vertical" android:weightSum="1">

    <TextView
        android:id="@+id/name_magasin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Magasin"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/icon_magasin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.08"
        app:srcCompat="@drawable/ic_home_black_24dp" />
    <TextView
            android:text="Description"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/desc" android:layout_weight="0.37"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="323dp" android:id="@+id/list_event"/>
</LinearLayout>
