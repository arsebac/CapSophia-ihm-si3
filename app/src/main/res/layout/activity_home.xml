<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fr.unice.polytech.si3.ihm.cpsophia.activities.PlanActivity">

    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="@string/select_magasin_verbose"
        android:textAlignment="center" />

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/plan"
                android:layout_width="203dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/plan_du_site"
                app:srcCompat="@drawable/plan" />

            <ListView
                android:id="@+id/listActivites"
                android:layout_width="match_parent"
                android:layout_height="329dp" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="114dp">

    </FrameLayout>

    <include layout="@layout/menu" />
</LinearLayout>
